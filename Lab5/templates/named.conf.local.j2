zone "syster.ttu" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.syster";
  allow-transfer {10.0.2.8;};
	notify yes;
{% else %}
  type slave;
  file "/var/lib/bind/db.syster";
  masters {
    {{ master_ip }};
  };
{% endif %}
};

zone "2.0.10.in-addr.arpa" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.syster.ptr";
  allow-transfer {10.0.2.8;};
{% else %}
  type slave;
  file "/var/lib/bind/db.syster.ptr";
  masters {
    {{ master_ip }};
  };
{% endif %}
};